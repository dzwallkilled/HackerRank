#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    
    int n;
    cin >> n;
    vector<int> x(n), y(n);
    vector<int> x2(n);
    int term1 = 0;
    for(int i = 0; i < n; ++i){
    	int x, y;
    	cin >> x[i] >> y[i];
    	x2[i] = x[i] * x[i];
    	term1 += x[i] * y[i];
    }
    
    term1 *= n;
    
    
    
     
    return 0;
}

